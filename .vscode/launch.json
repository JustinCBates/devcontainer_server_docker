{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Launch VPS Environment (Interactive)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "justMyCode": true,
            "stopOnEntry": false
        },
        {
            "name": "üßπ Launch Fresh Ubuntu",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "debian",
                "--distribution", "ubuntu",
                "--mode", "fresh"
            ],
            "justMyCode": true
        },
        {
            "name": "üíæ Launch Persistent Rocky Linux",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "redhat",
                "--distribution", "rocky",
                "--mode", "persistent"
            ],
            "justMyCode": true
        },
        {
            "name": "üîç VPS Status Check",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage-vps.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["status"],
            "justMyCode": true
        },
        {
            "name": "üõë Stop All VPS",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage-vps.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["stop"],
            "justMyCode": true
        },
        {
            "name": "üì∏ Create Ubuntu Snapshot",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "debian",
                "--distribution", "ubuntu",
                "--mode", "snapshot",
                "--state", "debug-snapshot"
            ],
            "justMyCode": true
        },
        {
            "name": "üîÑ Upgrade Alpine Linux",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "alpine",
                "--distribution", "alpine",
                "--mode", "upgrade"
            ],
            "justMyCode": true
        },
        {
            "name": "üêç Debug Launcher (with breakpoints)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--help"],
            "justMyCode": false,
            "stopOnEntry": false,
            "debugOptions": [
                "ShowReturnValue"
            ]
        }
    ]
}