{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "üöÄ Launch VPS Environment (Interactive)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [],
            "justMyCode": true,
            "stopOnEntry": false,
            "autoReload": {
                "enable": true
            }
        },
        {
            "name": "üßπ Launch Fresh Ubuntu",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "debian",
                "--distribution", "ubuntu",
                "--mode", "fresh"
            ],
            "justMyCode": true
        },
        {
            "name": "üíæ Launch Persistent Rocky Linux",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "redhat",
                "--distribution", "rocky",
                "--mode", "persistent"
            ],
            "justMyCode": true
        },
        {
            "name": "üîç VPS Status Check",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage-vps.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["status"],
            "justMyCode": true
        },
        {
            "name": "üõë Stop All VPS",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage-vps.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["stop"],
            "justMyCode": true
        },
        {
            "name": "üì∏ Create Ubuntu Snapshot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "debian",
                "--distribution", "ubuntu",
                "--mode", "snapshot",
                "--state", "debug-snapshot"
            ],
            "justMyCode": true
        },
        {
            "name": "üîÑ Upgrade Alpine Linux",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--family", "alpine",
                "--distribution", "alpine",
                "--mode", "upgrade"
            ],
            "justMyCode": true
        },
        {
            "name": "ÔøΩ Show Launcher Help",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/advanced-launcher.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": ["--help"],
            "justMyCode": true
        },
        {
            "name": "üß™ Test VS Code Integration",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/test-vscode-integration.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "üêõ Simple Debug Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/debug-test.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "stopOnEntry": false
        }
    ]
}